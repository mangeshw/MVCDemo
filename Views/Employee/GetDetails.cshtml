<style>
    table, th, td {
        border: 1px solid black;
        padding: 10px;
    }

    .alterColor {
        background-color: beige;
    }

    #marqueeDiv li {
        display: inline;
        list-style-type: none;
        padding-right: 20px;
    }

</style>

<script src="http://code.jquery.com/jquery.js"></script>
<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/jquery.picMarque.js"></script>
<link href="~/Content/jquery.picMarque.css" rel="stylesheet" />

<script type="text/javascript">
    $(document).ready(function () {
        $("#table1 tbody tr:even").each(function () {
            $("#table1 tbody tr:even").addClass("alterColor");
        });

        var picData = [      //image data（json），param：image（image path），title（image title），link（image link）
				          {
				              image: '~/Images/images1.jpg',
				              title: 'image title 1',
				              link: '#'
				          },
				          {
				              image: '~/Images/images2.jpg',
				              title: 'image title 2',
				              link: '#'
				          },
				          {
				              image: '~/Images/images3.jpg',
				              title: 'image title 3',
				              link: '#'
				          }]

        $("#marquePic").picMarque({
            speed: 60,//scroll speed（ms）
            errorimg: 'http://www.siaa.org.cn/style/common/nophoto.jpg',//error image path
            data: picData
        })
    });
</script>

