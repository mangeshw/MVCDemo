<h2>Employees Details</h2>

<table id="table1">
    <tr style="background-color:antiquewhite">
        <th>ID</th>
        <th>Name</th>
        <th>City</th>
        <th>Gender</th>
    </tr>
    @foreach (MVCDemo.Models.Employee emp in Model)
    {
        <tr>
            <td>@emp.EmployeeID</td>
            <td>@emp.Name</td>
            <td>@emp.City</td>
            <td>@emp.Gender</td>
        </tr>
    }
</table>
